{
  "name": "@lvce-editor/pretty-error",
  "version": "0.0.0-dev",
  "description": "Create user friendly error messages and code frames for errors",
  "main": "src/index.js",
  "type": "module",
  "types": "src/index.d.ts",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "build": "node packages/build/src/build.js",
    "build:static": "node packages/build/src/build-static.js",
    "build:watch": "./packages/build/node_modules/.bin/esbuild --format=esm --bundle --external:node:buffer --external:electron --external:ws --external:node:worker_threads --watch packages/file-search-worker/src/fileSearchWorkerMain.ts --outfile=.tmp/dist/dist/fileSearchWorkerMain.js",
    "dev": "node packages/build/src/dev.js",
    "format": "prettier --write .",
    "lint": "echo ok",
    "#lint": "eslint .",
    "postinstall": "lerna bootstrap --ci",
    "#test": "lerna run test",
    "test-integration": "lerna run test-integration",
    "type-check": "tsc -b"
  },
  "keywords": [
    "pretty",
    "error"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "devDependencies": {
    "@babel/code-frame": "^7.26.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/babel__code-frame": "^7.0.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.3",
    "execa": "^9.5.2",
    "jest": "^29.7.0",
    "lines-and-columns": "^2.0.4",
    "prettier": "^3.5.3",
    "rollup": "^4.40.0",
    "ts-jest": "^29.3.2",
    "@lerna/legacy-package-management": "^8.2.2",
    "@lvce-editor/eslint-config": "^1.38.0",
    "eslint": "9.23.0",
    "lerna": "^8.2.2",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
